<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/flower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/testoneview"
        android:src="@drawable/rose1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/firstline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Love,"
        android:textSize="35dp"
    android:textColor="#1A1ABE"
        app:layout_constraintTop_toBottomOf="@id/flower"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/thirdline"
        app:layout_constraintLeft_toRightOf="parent"

        />
    <TextView
        android:id="@+id/secondline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOU LIKE A FLOWER"
        android:textSize="35dp"
        android:textColor="#2437C2"
        app:layout_constraintTop_toBottomOf="@id/firstline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/thirdline"
        />
<TextView
        android:id="@+id/thirdline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       * Editors's Choice"
        android:textSize="15dp"
        android:textColor="#D60B45"
        app:layout_constraintTop_toBottomOf="@id/secondline"
        app:layout_constraintLeft_toLeftOf="parent"
        />
<TextView
    android:id="@+id/fourthline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="We're all a little weired.And life is a little weired.And when we find someone whose
weirdness is compatible with ours,
we join up with them and fall into mutually satisfying weirdness-and call it love-true love.    And in this crazy life,and through these"

    android:textSize="18dp"
    android:textColor="#196BCA"
    app:layout_constraintTop_toBottomOf="@id/thirdline"
    app:layout_constraintLeft_toLeftOf="parent"/>
 <TextView
     android:id="@+id/fiveline"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="$99.9"
     android:textSize="30dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/exam1btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonorder"
        android:text="ORDER NOW"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fourthline"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>