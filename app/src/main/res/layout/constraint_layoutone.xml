<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<Button
    android:id="@+id/btn_center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

<Button
    android:id="@+id/btn_angle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="45 degree"
    app:layout_constraintCircle="@id/btn_center"
    app:layout_constraintCircleRadius="150dp"
    app:layout_constraintCircleAngle="45"
    tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_angle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90 degree"
        app:layout_constraintCircle="@id/btn_center"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="90"/>

<Button
        android:id="@+id/btn_angle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="180 degree"
        app:layout_constraintCircle="@id/btn_center"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="180"
    tools:ignore="MissingConstraints" />
<Button
    android:id="@+id/btn_angle3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="225 degree"
    app:layout_constraintCircle="@id/btn_center"
    app:layout_constraintCircleRadius="150dp"
    app:layout_constraintCircleAngle="225"
    tools:ignore="MissingConstraints" />

<Button
    android:id="@+id/btn_angle4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="45 degree"
    app:layout_constraintCircle="@id/btn_center"
    app:layout_constraintCircleRadius="150dp"
    app:layout_constraintCircleAngle="135"
    tools:ignore="MissingConstraints" />
<Button
    android:id="@+id/btn_angle5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="270 degree"
    app:layout_constraintCircle="@id/btn_center"
    app:layout_constraintCircleRadius="150dp"
    app:layout_constraintCircleAngle="270"
    tools:ignore="MissingConstraints" />
<Button
    android:id="@+id/btn_angle6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="315 degree"
    app:layout_constraintCircle="@id/btn_center"
    app:layout_constraintCircleRadius="150dp"
    app:layout_constraintCircleAngle="315"
    tools:ignore="MissingConstraints" />
<Button
    android:id="@+id/btn_angle7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="360 degree"
    app:layout_constraintCircle="@id/btn_center"
    app:layout_constraintCircleRadius="150dp"
    app:layout_constraintCircleAngle="360"
    tools:ignore="DuplicateIds,MissingConstraints" />
<Button
    android:id="@+id/btn_invisible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:text="Gone"
    app:layout_constraintTop_toBottomOf="@+id/btn_angle2"/>

</androidx.constraintlayout.widget.ConstraintLayout>